/*
 * U-boot FIT image for Toradex Easy Installer
 */

/dts-v1/;

/ {
	description = "Toradex Easy Installer for Colibri iMX8X";
	#address-cells = <1>;

	images {
		kernel@1 {
			description = "Linux Kernel 4.14";
			data = /incbin/("./Image.gz");
			type = "kernel";
			arch = "arm64";
			os = "linux";
			compression = "gzip";
			load = <0x80280000>;
			entry = <0x80280000>;
			hash@1 {
				algo = "md5";
			};
		};

		ramdisk@1 {
			description = "SquashFS RAMdisk";
			data = /incbin/("./tezi-run-colibri-imx8x.@@TEZI_INITRD_IMAGE@@");
			type = "ramdisk";
			arch = "arm64";
			os = "linux";
			compression = "none";
			load = <0xA0000000>;
			hash@1 {
				algo = "md5";
			};
		};

		fdt@1 {
			description = "Colibri iMX8X Device Tree";
			data = /incbin/("./fsl-imx8qxp-colibri-eval-v3.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			hash@1 {
				algo = "md5";
			};
		};


	};

	configurations {
		default = "config@1";

		config@1 {
			description = "Toradex Easy Installer for Colibri iMX8X";
			kernel = "kernel@1";
			ramdisk = "ramdisk@1";
			fdt = "fdt@1";
		};
	};
};
