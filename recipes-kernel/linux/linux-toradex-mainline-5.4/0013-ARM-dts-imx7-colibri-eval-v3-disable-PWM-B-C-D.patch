+++ b/arch/arm/boot/dts/imx7-colibri-eval-v3.dtsi
@@ -178,18 +178,6 @@
 	status = "okay";
 };
 
-&pwm2 {
-	status = "okay";
-};
-
-&pwm3 {
-	status = "okay";
-};
-
-&pwm4 {
-	status = "okay";
-};
-
 &uart1 {
 	status = "okay";
 };
