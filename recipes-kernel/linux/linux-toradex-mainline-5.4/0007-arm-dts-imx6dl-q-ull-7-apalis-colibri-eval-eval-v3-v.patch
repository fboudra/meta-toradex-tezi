+++ b/arch/arm/boot/dts/imx6q-apalis-eval.dts
@@ -103,15 +103,17 @@
 		data-mapping = "rgb565";
 
 		panel-timing {
+			/* Default VESA VGA display timings */
 			clock-frequency = <25175000>;
 			hactive = <640>;
-			vactive = <480>;
-			hsync-len = <30>;
+			hback-porch = <48>;
 			hfront-porch = <16>;
-			hback-porch = <114>;
-			vsync-len = <3>;
-			vfront-porch = <10>;
-			vback-porch = <32>;
+			hsync-len = <96>;
+			vactive = <480>;
+			vback-porch = <31>;
+			vfront-porch = <11>;
+			vsync-len = <2>;
+			pixelclk-active = <0>;
 		};
 
 		port {
diff --git a/arch/arm/boot/dts/imx6ull-colibri-eval-v3.dtsi b/arch/arm/boot/dts/imx6ull-colibri-eval-v3.dtsi
index e27abcc0a7fe..24af2b426337 100644
--- a/arch/arm/boot/dts/imx6ull-colibri-eval-v3.dtsi
+++ b/arch/arm/boot/dts/imx6ull-colibri-eval-v3.dtsi
@@ -15,10 +15,27 @@
 		clock-frequency = <16000000>;
 	};
 
-	panel: panel {
-		compatible = "edt,et057090dhu";
+	panel_dpi: panel-dpi {
+		compatible = "panel-dpi";
 		backlight = <&bl>;
+		data-mapping = "bgr666";
+		height-mm = <86>;
 		power-supply = <&reg_3v3>;
+		width-mm = <115>;
+
+		panel-timing {
+			/* Default VESA VGA display timings */
+			clock-frequency = <25175000>;
+			hactive = <640>;
+			hback-porch = <48>;
+			hfront-porch = <16>;
+			hsync-len = <96>;
+			vactive = <480>;
+			vback-porch = <31>;
+			vfront-porch = <11>;
+			vsync-len = <2>;
+			pixelclk-active = <0>;
+		};
 
 		port {
 			panel_in: endpoint {
