Subject: [PATCH 07/14] arm: dts: imx6dl/q/ull/7-apalis/colibri-eval/eval-v3:
 vesa vga display timings

Use proper VESA VGA display timings by default.

Signed-off-by: Marcel Ziswiler <marcel.ziswiler@toradex.com>
---
 arch/arm/boot/dts/imx6dl-colibri-eval-v3.dts  | 14 +++++++------
 arch/arm/boot/dts/imx6q-apalis-eval.dts       | 14 +++++++------
 .../arm/boot/dts/imx6ull-colibri-eval-v3.dtsi | 21 +++++++++++++++++--
 arch/arm/boot/dts/imx7-colibri-eval-v3.dtsi   | 14 +++++++------
 4 files changed, 43 insertions(+), 20 deletions(-)

diff --git a/arch/arm/boot/dts/imx6dl-colibri-eval-v3.dts b/arch/arm/boot/dts/imx6dl-colibri-eval-v3.dts
index 70e870385a09..0e27f180913b 100644
--- a/arch/arm/boot/dts/imx6dl-colibri-eval-v3.dts
+++ b/arch/arm/boot/dts/imx6dl-colibri-eval-v3.dts
@@ -129,15 +129,17 @@
 		data-mapping = "bgr666";
 
 		panel-timing {
+			/* Default VESA VGA display timings */
 			clock-frequency = <25175000>;
 			hactive = <640>;
-			vactive = <480>;
-			hsync-len = <30>;
+			hback-porch = <48>;
 			hfront-porch = <16>;
-			hback-porch = <114>;
-			vsync-len = <3>;
-			vfront-porch = <10>;
-			vback-porch = <32>;
+			hsync-len = <96>;
+			vactive = <480>;
+			vback-porch = <31>;
+			vfront-porch = <11>;
+			vsync-len = <2>;
+			pixelclk-active = <0>;
 		};
 
 		port {
diff --git a/arch/arm/boot/dts/imx6q-apalis-eval.dts b/arch/arm/boot/dts/imx6q-apalis-eval.dts
index 8f98cb464a18..1972ec475ce9 100644
--- a/arch/arm/boot/dts/imx6q-apalis-eval.dts
+++ b/arch/arm/boot/dts/imx6q-apalis-eval.dts
@@ -116,15 +116,17 @@
 		data-mapping = "rgb24";
 
 		panel-timing {
+			/* Default VESA VGA display timings */
 			clock-frequency = <25175000>;
 			hactive = <640>;
-			vactive = <480>;
-			hsync-len = <30>;
+			hback-porch = <48>;
 			hfront-porch = <16>;
-			hback-porch = <114>;
-			vsync-len = <3>;
-			vfront-porch = <10>;
-			vback-porch = <32>;
+			hsync-len = <96>;
+			vactive = <480>;
+			vback-porch = <31>;
+			vfront-porch = <11>;
+			vsync-len = <2>;
+			pixelclk-active = <0>;
 		};
 
 		port {
diff --git a/arch/arm/boot/dts/imx6ull-colibri-eval-v3.dtsi b/arch/arm/boot/dts/imx6ull-colibri-eval-v3.dtsi
index aeb5d3011d4f..822e3fa48d41 100644
--- a/arch/arm/boot/dts/imx6ull-colibri-eval-v3.dtsi
+++ b/arch/arm/boot/dts/imx6ull-colibri-eval-v3.dtsi
@@ -15,10 +15,27 @@
 		clock-frequency = <16000000>;
 	};
 
-	panel: panel {
-		compatible = "edt,et057090dhu";
+	panel_dpi: panel-dpi {
+		compatible = "panel-dpi";
 		backlight = <&bl>;
+		data-mapping = "bgr666";
+		height-mm = <86>;
 		power-supply = <&reg_3v3>;
+		width-mm = <115>;
+
+		panel-timing {
+			/* Default VESA VGA display timings */
+			clock-frequency = <25175000>;
+			hactive = <640>;
+			hback-porch = <48>;
+			hfront-porch = <16>;
+			hsync-len = <96>;
+			vactive = <480>;
+			vback-porch = <31>;
+			vfront-porch = <11>;
+			vsync-len = <2>;
+			pixelclk-active = <0>;
+		};
 
 		port {
 			panel_in: endpoint {
