-			hback-porch = <114>;
-			vsync-len = <3>;
-			vfront-porch = <10>;
-			vback-porch = <32>;
+			hsync-len = <96>;
+			vactive = <480>;
+			vback-porch = <31>;
+			vfront-porch = <11>;
+			vsync-len = <2>;
+			pixelclk-active = <0>;
 		};
 
