+++ b/arch/arm/boot/dts/imx6q-apalis-eval.dts
@@ -294,18 +294,6 @@
 	status = "okay";
 };
 
-&pwm1 {
-	status = "okay";
-};
-
-&pwm2 {
-	status = "okay";
-};
-
-&pwm3 {
-	status = "okay";
-};
-
 &pwm4 {
 	status = "okay";
 };
